{
    "name": "Inpulse CR Auto-Filler",
    "description": "Automatise le remplissage des formulaires Inpulse (O&C, Suivi de Mission) Ã  partir de fichiers Markdown.",
    "version": "0.1.0",
    "manifest_version": 3,
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "host_permissions": [
        "https://inpulse.open-groupe.com/*"
    ],
    "action": {
        "default_popup": "src/popup.html",
        "default_icon": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://inpulse.open-groupe.com/*"
            ],
            "js": [
                "src/js/content_script.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "scripting"
    ]
}
